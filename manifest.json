{
  "manifest_version": 3,
  "name": "Meet Subtitles Translator",
  "version": "1.0.0",
  "description": "Translates Google Meet subtitles using DeepL",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://www.deepl.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["js/content-meet.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.deepl.com/*"],
      "js": ["js/content-deepl.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
